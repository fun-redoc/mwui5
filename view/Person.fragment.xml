<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
					<f:FormContainer title="{i18n>personData}">
						<f:formElements>
							<f:FormElement label="{i18n>name}">
								<f:fields>
									<Text text="{persons>completeName}" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>pernr}">
								<f:fields>
									<Text text="{persons>pernr}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
</core:FragmentDefinition>