<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<f:Form id="idFormRequestOptionsEdit"
			  visible="false"
				minWidth="1024"
				maxContainerCols="2"
				editable="true">
				<f:title>
					<core:Title text="EDIT {i18n>contractOptionis}" />
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanL="3"
						labelSpanM="3"
						emptySpanL="4"
						emptySpanM="4"
						columnsL="1"
						columnsM="1" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>singleDays}">
								<f:fields>
									<CheckBox id="idDay1" text="{i18n>monday}" selected="{persons>mobileWork/optionions/agreementWorkdays/day1}" 
									          change="onChangeDay"> </CheckBox>
									<CheckBox id="idDay2" text="{i18n>tuesday}" selected="{persons>mobileWork/optionions/agreementWorkdays/day2}" 
									          change="onChangeDay"> </CheckBox>
									<CheckBox id="idDay3" text="{i18n>wednesday}" selected="{persons>mobileWork/optionions/agreementWorkdays/day3}" 
									          change="onChangeDay"> </CheckBox>
									<CheckBox id="idDay4" text="{i18n>thursday}" selected="{persons>mobileWork/optionions/agreementWorkdays/day4}" 
									          change="onChangeDay"> </CheckBox>
									<CheckBox id="idDay5" text="{i18n>friday}" selected="{persons>mobileWork/optionions/agreementWorkdays/day5}" 
									          change="onChangeDay"> </CheckBox>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>additionalText}">
								<f:fields>
									<Text text="{persons>mobileWork/options/text}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
	</f:Form>
	<f:Form id="idFormRequestOptions"
			  visible="false"
				minWidth="1024"
				maxContainerCols="2"
				editable="false"
				class="isReadonly">
				<f:title>
					<core:Title text="{i18n>personData}" />
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanL="3"
						labelSpanM="3"
						emptySpanL="4"
						emptySpanM="4"
						columnsL="1"
						columnsM="1" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>lastName}">
								<f:fields>
									<Text text="{persons>lastName}" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>firstName}">
								<f:fields>
									<Text text="{persons>firstName}" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>pernr}">
								<f:fields>
									<Text text="{persons>pernr}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
	</f:Form>
</core:FragmentDefinition>