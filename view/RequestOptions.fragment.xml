<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<f:Form id="idFormRequestOptionsEdit"
			  visible="false"
				minWidth="1024"
				maxContainerCols="2"
				editable="false"
				class="isReadonly">
				<f:title>
					<core:Title text="EDIT {i18n>personData}" />
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanL="3"
						labelSpanM="3"
						emptySpanL="4"
						emptySpanM="4"
						columnsL="1"
						columnsM="1" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>lastName}">
								<f:fields>
									<Text text="{persons>lastName}" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>firstName}">
								<f:fields>
									<Text text="{persons>firstName}" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>pernr}">
								<f:fields>
									<Text text="{persons>pernr}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
	</f:Form>
	<f:Form id="idFormRequestOptions"
			  visible="false"
				minWidth="1024"
				maxContainerCols="2"
				editable="false"
				class="isReadonly">
				<f:title>
					<core:Title text="{i18n>personData}" />
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanL="3"
						labelSpanM="3"
						emptySpanL="4"
						emptySpanM="4"
						columnsL="1"
						columnsM="1" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>lastName}">
								<f:fields>
									<Text text="{persons>lastName}" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>firstName}">
								<f:fields>
									<Text text="{persons>firstName}" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>pernr}">
								<f:fields>
									<Text text="{persons>pernr}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
	</f:Form>
</core:FragmentDefinition>